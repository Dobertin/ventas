@model IEnumerable<Ventas.Infraestructure.Data.Entities.Asesore>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NroDoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantVentas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetaPropuesta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoDoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NroDoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantVentas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MetaPropuesta)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdAsesor">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdAsesor">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdAsesor">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
